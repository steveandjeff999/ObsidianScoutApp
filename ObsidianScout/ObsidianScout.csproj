	  <None Remove="Resources\icons\%24placeholder%24.scale-150.png" />
	  <None Remove="Resources\icons\%24placeholder%24.scale-200.png" />
	  <None Remove="Resources\icons\%24placeholder%24.scale-400.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-16.png" />
