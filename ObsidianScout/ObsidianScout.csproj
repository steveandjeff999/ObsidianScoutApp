	  <None Remove="Resources\icons\%24placeholder%24.targetsize-16_altform-unplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-24.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-24_altform-lightunplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-24_altform-unplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-256.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-256_altform-lightunplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-256_altform-unplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-32.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-32_altform-lightunplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-32_altform-unplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-48.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-48_altform-lightunplated.png" />
	  <None Remove="Resources\icons\%24placeholder%24.targetsize-48_altform-unplated.png" />
	</ItemGroup>
	<ItemGroup>
	  <Content Include="Resources\icons\$placeholder$.scale-100.png" />
	  <Content Include="Resources\icons\$placeholder$.scale-125.png" />
	  <Content Include="Resources\icons\$placeholder$.scale-150.png" />
	  <Content Include="Resources\icons\$placeholder$.scale-200.png" />
