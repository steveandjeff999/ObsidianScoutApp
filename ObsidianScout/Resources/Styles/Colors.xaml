<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ========================================
  LIGHT MODE COLORS - Modern & Professional
         ======================================== -->
    
    <!-- Primary Brand Colors for Light Mode -->
 <Color x:Key="LightPrimary">#5B21B6</Color><!-- Deep Purple - Better visibility -->
    <Color x:Key="LightPrimaryDark">#4C1D95</Color><!-- Darker Purple -->
  <Color x:Key="LightSecondary">#7C3AED</Color><!-- Vibrant Purple -->
    <Color x:Key="LightTertiary">#DB2777</Color><!-- Pink Accent -->
    
    <!-- Backgrounds for Light Mode -->
    <Color x:Key="LightBackground">#F5F5F7</Color><!-- Soft Gray Background -->
    <Color x:Key="LightSurface">#FFFFFF</Color><!-- Pure White Cards -->
    <Color x:Key="LightSurfaceVariant">#E8E8ED</Color><!-- Light Gray Variant -->

    <!-- Text Colors for Light Mode - High Contrast -->
    <Color x:Key="LightTextPrimary">#1C1C1E</Color><!-- Almost Black -->
    <Color x:Key="LightTextSecondary">#3A3A3C</Color><!-- Dark Gray -->
    <Color x:Key="LightTextTertiary">#8E8E93</Color><!-- Medium Gray -->
    
    <!-- Borders and Dividers for Light Mode -->
    <Color x:Key="LightBorder">#C7C7CC</Color><!-- Visible Border -->
    <Color x:Key="LightDivider">#D1D1D6</Color><!-- Subtle Divider -->
    
    <!-- Status Colors for Light Mode -->
    <Color x:Key="LightSuccess">#059669</Color><!-- Green -->
    <Color x:Key="LightWarning">#D97706</Color><!-- Amber -->
  <Color x:Key="LightError">#DC2626</Color><!-- Red -->
    <Color x:Key="LightInfo">#2563EB</Color><!-- Blue -->

    <!-- ========================================
         DARK MODE COLORS - Existing Design
         ======================================== -->
    
    <Color x:Key="DarkPrimary">#818CF8</Color>
    <Color x:Key="DarkPrimaryDark">#6366F1</Color>
    <Color x:Key="DarkSecondary">#A78BFA</Color>
    <Color x:Key="DarkTertiary">#F472B6</Color>
    
    <Color x:Key="DarkBackground">#0F172A</Color>
    <Color x:Key="DarkSurface">#1E293B</Color>
    <Color x:Key="DarkSurfaceVariant">#334155</Color>
    
    <Color x:Key="DarkTextPrimary">#F8FAFC</Color>
    <Color x:Key="DarkTextSecondary">#CBD5E1</Color>
    <Color x:Key="DarkTextTertiary">#64748B</Color>
    
    <Color x:Key="DarkBorder">#334155</Color>
    <Color x:Key="DarkDivider">#1E293B</Color>
    
    <Color x:Key="DarkSuccess">#34D399</Color>
    <Color x:Key="DarkWarning">#FBBF24</Color>
<Color x:Key="DarkError">#F87171</Color>
    <Color x:Key="DarkInfo">#60A5FA</Color>

    <!-- ========================================
         ADAPTIVE COLORS (Default Light Mode)
         Used without AppThemeBinding
    ======================================== -->
    
    <Color x:Key="Primary">#5B21B6</Color>
    <Color x:Key="PrimaryDark">#4C1D95</Color>
    <Color x:Key="Secondary">#7C3AED</Color>
    <Color x:Key="Tertiary">#DB2777</Color>
    
    <Color x:Key="Background">#F5F5F7</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="SurfaceVariant">#E8E8ED</Color>
    
    <Color x:Key="TextPrimary">#1C1C1E</Color>
    <Color x:Key="TextSecondary">#3A3A3C</Color>
 <Color x:Key="TextTertiary">#8E8E93</Color>
    
    <Color x:Key="BorderColor">#C7C7CC</Color>
    <Color x:Key="DividerColor">#D1D1D6</Color>
    
    <Color x:Key="Success">#059669</Color>
    <Color x:Key="Warning">#D97706</Color>
    <Color x:Key="Error">#DC2626</Color>
    <Color x:Key="Info">#2563EB</Color>

    <!-- Glassmorphism Overlay Colors -->
    <Color x:Key="GlassOverlayLight">#FCFFFFFF</Color><!-- Slightly transparent white -->
    <Color x:Key="GlassOverlayDark">#F01E293B</Color>
    <Color x:Key="GlassOverlay">#FCFFFFFF</Color>

    <!-- ========================================
         ADDITIONAL UI COLORS
 ======================================== -->
    
    <!-- Gray Scale -->
    <Color x:Key="Gray100">#F5F5F7</Color>
    <Color x:Key="Gray200">#E5E5EA</Color>
    <Color x:Key="Gray300">#D1D1D6</Color>
    <Color x:Key="Gray400">#C7C7CC</Color>
    <Color x:Key="Gray500">#AEAEB2</Color>
    <Color x:Key="Gray600">#8E8E93</Color>
<Color x:Key="Gray700">#636366</Color>
    <Color x:Key="Gray800">#3A3A3C</Color>
    <Color x:Key="Gray900">#1C1C1E</Color>
    <Color x:Key="Gray950">#000000</Color>
 
    <!-- Basic Colors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>
    
  <!-- Interactive States for Light Mode -->
    <Color x:Key="LightHover">#F0F0F5</Color>
    <Color x:Key="LightPressed">#E0E0E8</Color>
    <Color x:Key="LightDisabled">#F5F5F7</Color>
    <Color x:Key="LightDisabledText">#C7C7CC</Color>
    
    <!-- Interactive States for Dark Mode -->
    <Color x:Key="DarkHover">#2D3748</Color>
    <Color x:Key="DarkPressed">#3D4A5C</Color>
    <Color x:Key="DarkDisabled">#1A202C</Color>
    <Color x:Key="DarkDisabledText">#4A5568</Color>

</ResourceDictionary>