<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:ObsidianScout.Converters">

    <!-- DESIGN TOKENS -->
    
    <!-- Spacing Scale -->
 <x:Double x:Key="SpacingXs">4</x:Double>
  <x:Double x:Key="SpacingSm">8</x:Double>
    <x:Double x:Key="SpacingMd">12</x:Double>
    <x:Double x:Key="SpacingLg">16</x:Double>
    <x:Double x:Key="SpacingXl">24</x:Double>
    <x:Double x:Key="Spacing2Xl">32</x:Double>
    
    <!-- Legacy spacing (integer) -->
  <x:Int32 x:Key="SpacingSmall">8</x:Int32>
    <x:Int32 x:Key="SpacingMedium">12</x:Int32>
 <x:Int32 x:Key="SpacingLarge">20</x:Int32>
    
    <!-- Corner Radius Scale -->
    <x:Int32 x:Key="RadiusNone">0</x:Int32>
    <x:Int32 x:Key="RadiusSm">4</x:Int32>
    <x:Int32 x:Key="RadiusMd">8</x:Int32>
<x:Int32 x:Key="RadiusLg">12</x:Int32>
    <x:Int32 x:Key="RadiusXl">16</x:Int32>
    <x:Int32 x:Key="Radius2Xl">24</x:Int32>
    <x:Int32 x:Key="RadiusFull">9999</x:Int32>
    
    <!-- Legacy corner radius -->
    <x:Int32 x:Key="CornerRadiusSmall">8</x:Int32>
    <x:Int32 x:Key="CornerRadiusMedium">12</x:Int32>
    <x:Int32 x:Key="CornerRadiusLarge">16</x:Int32>

<!-- Font Sizes -->
    <x:Double x:Key="FontSizeXs">11</x:Double>
 <x:Double x:Key="FontSizeSm">13</x:Double>
  <x:Double x:Key="FontSizeMd">15</x:Double>
    <x:Double x:Key="FontSizeLg">17</x:Double>
    <x:Double x:Key="FontSizeXl">20</x:Double>
    <x:Double x:Key="FontSize2Xl">24</x:Double>
    <x:Double x:Key="FontSize3Xl">30</x:Double>
    <x:Double x:Key="FontSize4Xl">36</x:Double>

    <!-- Flyout sizing -->
    <x:Int32 x:Key="FlyoutAvatarSize">48</x:Int32>
    <x:Int32 x:Key="FlyoutAvatarRadius">24</x:Int32>

    <!-- Converters -->
    <converters:InvertedBoolConverter x:Key="InverseBooleanConverter" />

    <!-- App Font -->
    <OnPlatform x:TypeArguments="x:String" x:Key="AppFont">
 <On Platform="Android" Value="OpenSansRegular.ttf#Open Sans" />
        <On Platform="iOS" Value="OpenSansRegular" />
        <On Platform="WinUI" Value="OpenSansRegular" />
        <On Platform="MacCatalyst" Value="OpenSansRegular" />
    </OnPlatform>

    <!--GRADIENT BRUSHES -->

    <!-- Page Background Gradients -->
    <LinearGradientBrush x:Key="PageBackgroundBrushLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource LightBackground}" Offset="0" />
        <GradientStop Color="{StaticResource LightSurfaceVariant}" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PageBackgroundBrushDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkBackground}" Offset="0" />
     <GradientStop Color="{StaticResource DarkSurface}" Offset="1" />
    </LinearGradientBrush>

    <!-- Primary Gradient -->
    <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource LightPrimary}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightSecondary}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientLight" StartPoint="0,0" EndPoint="1,1">
   <GradientStop Color="{StaticResource LightPrimaryLight}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightSecondaryLight}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="PrimaryGradientDark" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource DarkPrimary}" Offset="0.0" />
        <GradientStop Color="{StaticResource DarkSecondary}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Accent Gradient -->
  <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{StaticResource LightSecondary}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightTertiary}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Glass Brushes -->
    <LinearGradientBrush x:Key="GlassBrushLight" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#F2FFFFFF" Offset="0.0" />
        <GradientStop Color="#E6FAFAFA" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassBrushDark" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#E6262626" Offset="0.0" />
        <GradientStop Color="#CC1E1E1E" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Liquid Glass Brushes -->
 <LinearGradientBrush x:Key="LiquidGlassBrushLight" StartPoint="0,0" EndPoint="1,0.6">
        <GradientStop Color="{StaticResource GlassOverlayLight}" Offset="0.0" />
        <GradientStop Color="{StaticResource LiquidStopLight1}" Offset="0.08" />
      <GradientStop Color="{StaticResource LiquidStopLight2}" Offset="0.16" />
        <GradientStop Color="{StaticResource LiquidStopLight3}" Offset="0.32" />
        <GradientStop Color="{StaticResource DeepGreyBlueLight}" Offset="1.0" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="LiquidGlassBrushDark" StartPoint="0,0" EndPoint="1,0.6">
        <GradientStop Color="{StaticResource GlassOverlayDark}" Offset="0.0" />
  <GradientStop Color="{StaticResource LiquidStopDark1}" Offset="0.08" />
        <GradientStop Color="{StaticResource LiquidStopDark2}" Offset="0.16" />
 <GradientStop Color="{StaticResource LiquidStopDark3}" Offset="0.32" />
        <GradientStop Color="{StaticResource DeepGreyBlueDark}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Primary Button Gradients -->
    <LinearGradientBrush x:Key="PrimaryGlassButtonBrushLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource LightPrimaryLight}" Offset="0.0" />
        <GradientStop Color="{StaticResource LightPrimary}" Offset="1.0" />
  </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="PrimaryGlassButtonBrushDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{StaticResource DarkPrimary}" Offset="0.0" />
     <GradientStop Color="{StaticResource DarkPrimaryDark}" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Flyout Header Brushes -->
    <LinearGradientBrush x:Key="FlyoutHeaderBrushLight" StartPoint="0,0" EndPoint="0,1">
    <GradientStop Color="{StaticResource LightSurface}" Offset="0" />
    <GradientStop Color="{StaticResource LightSurfaceVariant}" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="FlyoutHeaderBrushDark" StartPoint="0,0" EndPoint="0,1">
  <GradientStop Color="{StaticResource DarkSurface}" Offset="0" />
        <GradientStop Color="{StaticResource DarkSurfaceVariant}" Offset="1" />
    </LinearGradientBrush>

    <!-- Flyout (sidebar) background brushes - translucent glass look -->
    <LinearGradientBrush x:Key="FlyoutBackgroundBrushLight" StartPoint="0,0" EndPoint="0,1">
        <!-- Increased transparency for a lighter translucent effect -->
        <GradientStop Color="#80FFFFFF" Offset="0" />
        <GradientStop Color="#60F5F7F9" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="FlyoutBackgroundBrushDark" StartPoint="0,0" EndPoint="0,1">
        <!-- Increased transparency for a darker translucent effect -->
        <GradientStop Color="#801E1E1E" Offset="0" />
        <GradientStop Color="#6016181A" Offset="1" />
    </LinearGradientBrush>

    <!-- Selection Brushes -->
    <SolidColorBrush x:Key="FlyoutSelectionBrushLight" Color="#E6DBEAFE" />
    <SolidColorBrush x:Key="FlyoutSelectionBrushDark" Color="#332563EB" />

    <!-- Glass Stroke Brushes -->
    <LinearGradientBrush x:Key="GlassStrokeLight" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#66E5E5E5" Offset="0" />
        <GradientStop Color="#33E5E5E5" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="GlassStrokeDark" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#66525252" Offset="0" />
        <GradientStop Color="#333D3D3D" Offset="1" />
 </LinearGradientBrush>

    <!-- SHADOWS -->
    
    <Shadow x:Key="ShadowSm">
        <Shadow.Brush>
    <SolidColorBrush Color="#14000000" />
        </Shadow.Brush>
    <Shadow.Offset>0,1</Shadow.Offset>
   <Shadow.Radius>3</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
    </Shadow>

    <Shadow x:Key="ShadowMd">
        <Shadow.Brush>
     <SolidColorBrush Color="#1A000000" />
        </Shadow.Brush>
        <Shadow.Offset>0,4</Shadow.Offset>
  <Shadow.Radius>6</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
    </Shadow>

    <Shadow x:Key="ShadowLg">
 <Shadow.Brush>
         <SolidColorBrush Color="#1F000000" />
   </Shadow.Brush>
   <Shadow.Offset>0,10</Shadow.Offset>
      <Shadow.Radius>15</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
  </Shadow>

    <Shadow x:Key="ShadowXl">
<Shadow.Brush>
     <SolidColorBrush Color="#25000000" />
   </Shadow.Brush>
    <Shadow.Offset>0,20</Shadow.Offset>
<Shadow.Radius>25</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
    </Shadow>

<!-- Legacy shadow aliases -->
    <Shadow x:Key="GlassShadow">
        <Shadow.Brush>
      <SolidColorBrush Color="#1A000000" />
     </Shadow.Brush>
      <Shadow.Offset>0,4</Shadow.Offset>
        <Shadow.Radius>12</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
    </Shadow>

    <Shadow x:Key="CardShadow">
        <Shadow.Brush>
  <SolidColorBrush Color="#14000000" />
        </Shadow.Brush>
 <Shadow.Offset>0,2</Shadow.Offset>
        <Shadow.Radius>8</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
    </Shadow>

    <Shadow x:Key="ElevatedShadow">
<Shadow.Brush>
            <SolidColorBrush Color="#1F000000" />
        </Shadow.Brush>
        <Shadow.Offset>0,8</Shadow.Offset>
        <Shadow.Radius>20</Shadow.Radius>
        <Shadow.Opacity>1</Shadow.Opacity>
    </Shadow>

    <!-- ICON FONTS -->
    
    <FontImageSource x:Key="IconScoutMatch" FontFamily="FA" Glyph="&#xF15C;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
    <FontImageSource x:Key="IconTeams" FontFamily="FA" Glyph="&#xF0C0;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
    <FontImageSource x:Key="IconEvents" FontFamily="FA" Glyph="&#xF073;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
    <FontImageSource x:Key="IconGraphs" FontFamily="FA" Glyph="&#xF080;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
    <FontImageSource x:Key="IconPredictions" FontFamily="FA" Glyph="&#xF544;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
    <FontImageSource x:Key="IconLogout" FontFamily="FA" Glyph="&#xF2F5;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />

    <!-- BASE STYLES -->
    
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
<Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" />
      <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PageBackgroundBrushLight}, Dark={StaticResource PageBackgroundBrushDark}}" />
    </Style>

    <!-- Floating Action Button (modern circular icon) - grey/black scheme -->
    <Style x:Key="FAB" TargetType="ImageButton">
        <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="CornerRadius" Value="28" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray900}}" />
        <Setter Property="Shadow" Value="{StaticResource ShadowLg}" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="HorizontalOptions" Value="End" />
        <Setter Property="VerticalOptions" Value="End" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
        <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
    </Style>

    <Style TargetType="Shell">
        <Setter Property="FlyoutBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
 <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
     <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
    </Style>

    <!-- CARD STYLES -->
    
    <!-- Modern Card - Clean with subtle shadow and translucent gradient background -->
    <Style x:Key="ModernCard" TargetType="Border">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
        <Setter Property="Opacity" Value="0.95" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource GlassStrokeLight}, Dark={StaticResource GlassStrokeDark}}" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Shadow" Value="{StaticResource ShadowSm}" />
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12" />
        </Setter>
    </Style>

    <!-- Glass Card - Elevated with more padding, translucent gradient and subtle stroke -->
    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
        <Setter Property="Opacity" Value="0.92" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource GlassStrokeLight}, Dark={StaticResource GlassStrokeDark}}" />
        <Setter Property="Padding" Value="20" />
        <Setter Property="Shadow" Value="{StaticResource ShadowMd}" />
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="16" />
        </Setter>
    </Style>

    <Style x:Key="ElevatedGlassCard" TargetType="Border" BasedOn="{StaticResource GlassCard}">
        <Setter Property="Shadow" Value="{StaticResource ShadowXl}" />
        <Setter Property="Padding" Value="24" />
        <Setter Property="Opacity" Value="0.95" />
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="20" />
        </Setter>
    </Style>

    <Style x:Key="CompactGlassCard" TargetType="Border" BasedOn="{StaticResource GlassCard}">
        <Setter Property="Padding" Value="16" />
        <Setter Property="Shadow" Value="{StaticResource ShadowSm}" />
        <Setter Property="Opacity" Value="0.94" />
        <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="12" />
        </Setter>
    </Style>

    <!-- Backward Compatibility Aliases -->
    <Style x:Key="CardBorderStyle" TargetType="Border" BasedOn="{StaticResource ModernCard}" />
    <Style x:Key="GlassCardStyle" TargetType="Border" BasedOn="{StaticResource GlassCard}" />

    <!-- List Item Card -->
    <Style x:Key="GlassListItem" TargetType="Border" BasedOn="{StaticResource ModernCard}">
   <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,0,0,12" />
        <Setter Property="StrokeShape">
    <RoundRectangle CornerRadius="12" />
  </Setter>
    </Style>

    <!-- BUTTON STYLES -->
  
    <!-- Primary Button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#171717}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="20,0" />
        <Setter Property="HeightRequest" Value="48" />
    <Setter Property="BorderWidth" Value="0" />
      <Setter Property="Shadow" Value="{StaticResource ShadowSm}" />
   <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
             <VisualStateGroup x:Name="CommonStates">
        <VisualState x:Name="Normal" />
   <VisualState x:Name="Disabled">
    <VisualState.Setters>
   <Setter Property="Opacity" Value="0.5" />
       </VisualState.Setters>
      </VisualState>
                <VisualState x:Name="PointerOver">
 <VisualState.Setters>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimaryDark}, Dark={StaticResource DarkPrimaryLight}}" />
           </VisualState.Setters>
            </VisualState>
           <VisualState x:Name="Pressed">
  <VisualState.Setters>
         <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimaryDark}, Dark={StaticResource DarkPrimaryDark}}" />
       <Setter Property="Scale" Value="0.98" />
        </VisualState.Setters>
     </VisualState>
     </VisualStateGroup>
        </VisualStateGroupList>
        </Setter>
    </Style>

  <!-- Default Button style -->
    <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />

    <!-- Secondary Button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurfaceVariant}, Dark={StaticResource DarkSurfaceVariant}}" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
      <Setter Property="Padding" Value="16,0" />
        <Setter Property="HeightRequest" Value="44" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource LightBorder}, Dark={StaticResource DarkBorder}}" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
          <VisualStateGroup x:Name="CommonStates">
     <VisualState x:Name="Normal" />
           <VisualState x:Name="Disabled">
                <VisualState.Setters>
       <Setter Property="Opacity" Value="0.5" />
      </VisualState.Setters>
  </VisualState>
          <VisualState x:Name="PointerOver">
      <VisualState.Setters>
       <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightHover}, Dark={StaticResource DarkHover}}" />
    </VisualState.Setters>
      </VisualState>
         <VisualState x:Name="Pressed">
               <VisualState.Setters>
           <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPressed}, Dark={StaticResource DarkPressed}}" />
            <Setter Property="Scale" Value="0.98" />
 </VisualState.Setters>
        </VisualState>
    </VisualStateGroup>
          </VisualStateGroupList>
        </Setter>
    </Style>

  <!-- Outline Button -->
 <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
     <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
        <Setter Property="BorderWidth" Value="1.5" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
     <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="20,0" />
        <Setter Property="HeightRequest" Value="48" />
  <Setter Property="VisualStateManager.VisualStateGroups">
   <VisualStateGroupList>
    <VisualStateGroup x:Name="CommonStates">
          <VisualState x:Name="Normal" />
<VisualState x:Name="Disabled">
            <VisualState.Setters>
        <Setter Property="Opacity" Value="0.5" />
 </VisualState.Setters>
           </VisualState>
                <VisualState x:Name="PointerOver">
   <VisualState.Setters>
          <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#0D2563EB, Dark=#1A60A5FA}" />
 </VisualState.Setters>
     </VisualState>
         <VisualState x:Name="Pressed">
        <VisualState.Setters>
  <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#1A2563EB, Dark=#2660A5FA}" />
          <Setter Property="Scale" Value="0.98" />
         </VisualState.Setters>
        </VisualState>
       </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
  </Style>

    <!-- Ghost Button -->
    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
  <Setter Property="FontFamily" Value="OpenSansSemibold" />
      <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
      <Setter Property="Padding" Value="16,0" />
        <Setter Property="HeightRequest" Value="44" />
     <Setter Property="BorderWidth" Value="0" />
     <Setter Property="VisualStateManager.VisualStateGroups">
       <VisualStateGroupList>
         <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
         <VisualState x:Name="Disabled">
         <VisualState.Setters>
           <Setter Property="Opacity" Value="0.5" />
    </VisualState.Setters>
    </VisualState>
      <VisualState x:Name="PointerOver">
  <VisualState.Setters>
         <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightHover}, Dark={StaticResource DarkHover}}" />
    </VisualState.Setters>
       </VisualState>
           </VisualStateGroup>
   </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- Icon Button -->
    <Style x:Key="IconButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurfaceVariant}, Dark={StaticResource DarkSurfaceVariant}}" />
  <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="CornerRadius" Value="12" />
<Setter Property="WidthRequest" Value="48" />
  <Setter Property="HeightRequest" Value="48" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource LightBorder}, Dark={StaticResource DarkBorder}}" />
    </Style>

    <!-- FAB (Floating Action Button) - grey/black scheme for Button usage -->
    <Style x:Key="FABButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray800}, Dark={StaticResource Gray900}}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
        <Setter Property="CornerRadius" Value="28" />
      <Setter Property="WidthRequest" Value="56" />
        <Setter Property="HeightRequest" Value="56" />
        <Setter Property="Padding" Value="0" />
    <Setter Property="FontSize" Value="24" />
      <Setter Property="Shadow" Value="{StaticResource ShadowLg}" />
    </Style>

    <!-- Danger Button -->
    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightError}, Dark={StaticResource DarkError}}" />
        <Setter Property="TextColor" Value="#FFFFFF" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="20,0" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="BorderWidth" Value="0" />
    </Style>

    <!-- Legacy Button Aliases -->
    <Style x:Key="GlassButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
    <Style x:Key="PrimaryGlassButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
    <Style x:Key="SecondaryGlassButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}" />
    <Style x:Key="OutlineGlassButton" TargetType="Button" BasedOn="{StaticResource OutlineButton}" />
    <Style x:Key="CounterButton" TargetType="Button" BasedOn="{StaticResource IconButton}" />
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}" />
  <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
    <Style x:Key="OutlineButtonStyle" TargetType="Button" BasedOn="{StaticResource OutlineButton}" />

    <!-- INPUT STYLES -->
    
    <!-- Entry -->
    <Style x:Key="ModernEntry" TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
  <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
   <Setter Property="FontSize" Value="15" />
        <Setter Property="HeightRequest" Value="48" />
        <Setter Property="MinimumHeightRequest" Value="48" />
        <Setter Property="VerticalOptions" Value="Center" />
     <Setter Property="HorizontalTextAlignment" Value="Start" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
    </Style>

    <Style x:Key="GlassEntry" TargetType="Entry" BasedOn="{StaticResource ModernEntry}" />

    <!-- Default Entry Style -->
    <Style TargetType="Entry" BasedOn="{StaticResource ModernEntry}" />

    <!-- Editor -->
    <Style x:Key="ModernEditor" TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
 <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="MinimumHeightRequest" Value="100" />
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
    </Style>

    <Style x:Key="GlassEditor" TargetType="Editor" BasedOn="{StaticResource ModernEditor}" />

    <!-- Picker -->
    <Style x:Key="ModernPicker" TargetType="Picker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontSize">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="WinUI" Value="20" />
                    <On Platform="Android" Value="16" />
                    <On Platform="iOS" Value="16" />
                    <On Platform="MacCatalyst" Value="16" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="HeightRequest">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="WinUI" Value="96" />
                    <On Platform="Android" Value="52" />
                    <On Platform="iOS" Value="52" />
                    <On Platform="MacCatalyst" Value="52" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="MinimumHeightRequest">
            <Setter.Value>
                <OnPlatform x:TypeArguments="x:Double">
                    <On Platform="WinUI" Value="96" />
                    <On Platform="Android" Value="52" />
                    <On Platform="iOS" Value="52" />
                    <On Platform="MacCatalyst" Value="52" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="Margin">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="WinUI" Value="12,8" />
                    <On Platform="Android" Value="8,6" />
                    <On Platform="iOS" Value="8,6" />
                    <On Platform="MacCatalyst" Value="8,6" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="Picker" BasedOn="{StaticResource ModernPicker}" />
 <Style x:Key="GlassPicker" TargetType="Picker" BasedOn="{StaticResource ModernPicker}" />
    <Style x:Key="GlassPickerStyle" TargetType="Picker" BasedOn="{StaticResource ModernPicker}" />

    <!-- LABEL STYLES -->
    
    <!-- Default Label -->
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
    <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="FontSize" Value="15" />
    </Style>

    <Style x:Key="DisplayLabel" TargetType="Label">
      <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
      <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
  </Style>

    <Style x:Key="HeaderLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="26" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="SubheaderLabel" TargetType="Label">
      <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
     <Setter Property="FontFamily" Value="OpenSansSemibold" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
 <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

    <Style x:Key="BodyLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
        <Setter Property="FontSize" Value="15" />
     <Setter Property="LineBreakMode" Value="WordWrap" />
    </Style>

  <Style x:Key="CaptionLabel" TargetType="Label">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="LineBreakMode" Value="WordWrap" />
  </Style>

    <Style x:Key="AccentLabel" TargetType="Label">
     <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
      <Setter Property="FontSize" Value="15" />
      <Setter Property="FontAttributes" Value="Bold" />
 </Style>

    <Style x:Key="SectionHeader" TargetType="Label">
   <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold" />
   <Setter Property="FontSize" Value="13" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="CharacterSpacing" Value="0.5" />
        <Setter Property="Margin" Value="4,20,0,8" />
    </Style>

    <!-- UI ELEMENTS -->
    
    <!-- Divider -->
    <Style x:Key="Divider" TargetType="BoxView">
  <Setter Property="HeightRequest" Value="1" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightDivider}, Dark={StaticResource DarkDivider}}" />
     <Setter Property="Margin" Value="0,12" />
    </Style>

    <!-- Badge -->
    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="StrokeThickness" Value="0" />
      <Setter Property="StrokeShape">
            <RoundRectangle CornerRadius="20" />
        </Setter>
    </Style>

    <Style x:Key="SuccessBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSuccess}, Dark={StaticResource DarkSuccess}}" />
    </Style>

  <Style x:Key="WarningBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightWarning}, Dark={StaticResource DarkWarning}}" />
    </Style>

    <Style x:Key="ErrorBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
   <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightError}, Dark={StaticResource DarkError}}" />
    </Style>

    <Style x:Key="InfoBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
    <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightInfo}, Dark={StaticResource DarkInfo}}" />
    </Style>

    <!-- FORM CONTROLS -->
    
    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
          <VisualStateGroup x:Name="CommonStates">
  <VisualState x:Name="Normal" />
     <VisualState x:Name="Disabled">
      <VisualState.Setters>
    <Setter Property="Opacity" Value="0.5" />
            </VisualState.Setters>
        </VisualState>
       </VisualStateGroup>
      </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Slider">
        <Setter Property="MinimumTrackColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
  <Setter Property="MaximumTrackColor" Value="{AppThemeBinding Light={StaticResource LightBorder}, Dark={StaticResource DarkBorder}}" />
 <Setter Property="ThumbColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    </Style>

    <Style TargetType="Switch">
   <Setter Property="OnColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    <Setter Property="ThumbColor" Value="White" />
    </Style>

    <Style TargetType="ActivityIndicator">
    <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    </Style>

    <!-- Frame Style for backward compatibility -->
    <Style TargetType="Frame">
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurfaceVariant}}" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource LightBorder}, Dark={StaticResource DarkBorder}}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="HasShadow" Value="False" />
    </Style>

    <!-- SearchBar -->
    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurfaceContainer}, Dark={StaticResource DarkSurfaceContainer}}" />
    <Setter Property="CancelButtonColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    </Style>

    <!-- RefreshView -->
    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
    </Style>

</ResourceDictionary>
