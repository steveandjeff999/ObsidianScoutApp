<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
xmlns:converters="clr-namespace:ObsidianScout.Converters">

 <!-- Design tokens: spacing & corner radii -->
 <x:Double x:Key="SpacingSmall">8</x:Double>
 <x:Double x:Key="SpacingMedium">12</x:Double>
 <x:Double x:Key="SpacingLarge">20</x:Double>
 <x:Double x:Key="CornerRadiusSmall">8</x:Double>
 <x:Double x:Key="CornerRadiusMedium">16</x:Double>
 <x:Double x:Key="CornerRadiusLarge">24</x:Double>

 <!-- Flyout avatar sizing tokens (reduced to give breathing room) -->
 <x:Double x:Key="FlyoutAvatarSize">80</x:Double>
 <x:Double x:Key="FlyoutAvatarRadius">40</x:Double>

 <!-- Converters -->
 <converters:InvertedBoolConverter x:Key="InverseBooleanConverter" />

 <!-- Modern app font alias (used across the app) -->
 <OnPlatform x:TypeArguments="x:String" x:Key="AppFont">
 <On Platform="Android" Value="OpenSansRegular.ttf#Open Sans" />
 <On Platform="iOS" Value="OpenSansRegular" />
 <On Platform="WinUI" Value="OpenSansRegular" />
 <On Platform="MacCatalyst" Value="OpenSansRegular" />
 </OnPlatform>

 <!-- PAGE BACKGROUNDS: simplified modern two-stop gradients for a cleaner look -->
 <LinearGradientBrush x:Key="PageBackgroundBrushLight" StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="{StaticResource LightBackground}" Offset="0" />
 <GradientStop Color="{StaticResource LightSurfaceVariant}" Offset="1" />
 </LinearGradientBrush>

 <LinearGradientBrush x:Key="PageBackgroundBrushDark" StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="{StaticResource DarkBackground}" Offset="0" />
 <GradientStop Color="{StaticResource DarkSurface}" Offset="1" />
 </LinearGradientBrush>

 <!-- LIQUID GLASS BRUSHES (smooth using color resources) -->
 <LinearGradientBrush x:Key="LiquidGlassBrushLight" StartPoint="0,0" EndPoint="1,0.6">
 <!-- start: semi-transparent white overlay (resource) -->
 <GradientStop Color="{StaticResource GlassOverlayLight}" Offset="0.0" />
 <GradientStop Color="{StaticResource LiquidStopLight1}" Offset="0.08" />
 <GradientStop Color="{StaticResource LiquidStopLight2}" Offset="0.16" />
 <GradientStop Color="{StaticResource LiquidStopLight3}" Offset="0.32" />
 <GradientStop Color="{StaticResource DeepGreyBlueLight}" Offset="1.0" />
 </LinearGradientBrush>

 <LinearGradientBrush x:Key="LiquidGlassBrushDark" StartPoint="0,0" EndPoint="1,0.6">
 <!-- start: semi-transparent dark overlay (resource) -->
 <GradientStop Color="{StaticResource GlassOverlayDark}" Offset="0.0" />
 <GradientStop Color="{StaticResource LiquidStopDark1}" Offset="0.08" />
 <GradientStop Color="{StaticResource LiquidStopDark2}" Offset="0.16" />
 <GradientStop Color="{StaticResource LiquidStopDark3}" Offset="0.32" />
 <GradientStop Color="{StaticResource DeepGreyBlueDark}" Offset="1.0" />
 </LinearGradientBrush>

 <!-- Primary button glass variant (light/dark) using stops -->
 <LinearGradientBrush x:Key="PrimaryGlassButtonBrushLight" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="{StaticResource LightPrimary}" Offset="0.0" />
 <GradientStop Color="{StaticResource PrimaryBtnStop1}" Offset="0.35" />
 <GradientStop Color="{StaticResource PrimaryBtnStop2}" Offset="0.65" />
 <GradientStop Color="{StaticResource GlassOverlayLight}" Offset="1.0" />
 </LinearGradientBrush>
 <LinearGradientBrush x:Key="PrimaryGlassButtonBrushDark" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="{StaticResource DarkPrimary}" Offset="0.0" />
 <GradientStop Color="{StaticResource PrimaryBtnStop1}" Offset="0.35" />
 <GradientStop Color="{StaticResource PrimaryBtnStop2}" Offset="0.65" />
 <GradientStop Color="{StaticResource GlassOverlayDark}" Offset="1.0" />
 </LinearGradientBrush>

 <!-- Modern selection/flyout brushes -->
 <SolidColorBrush x:Key="FlyoutSelectionBrushLight" Color="#E6EEF2FF" />
 <SolidColorBrush x:Key="FlyoutSelectionBrushDark" Color="#264F46F8" />
 <!-- Make flyout header match neutral app background instead of purple gradient -->
 <LinearGradientBrush x:Key="FlyoutHeaderBrushLight" StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="{StaticResource LightSurface}" Offset="0" />
 <GradientStop Color="{StaticResource LightSurfaceVariant}" Offset="1" />
 </LinearGradientBrush>
 <LinearGradientBrush x:Key="FlyoutHeaderBrushDark" StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="{StaticResource DarkBackground}" Offset="0" />
 <GradientStop Color="{StaticResource DarkSurface}" Offset="1" />
 </LinearGradientBrush>

 <!-- ========================================
 MODERN GLASS BRUSHES (rest unchanged)
 ======================================== -->

 <LinearGradientBrush x:Key="GlassBrushLight" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="#F5FFFFFF" Offset="0.0" />
 <GradientStop Color="#E5F8FAFC" Offset="1.0" />
 </LinearGradientBrush>

 <LinearGradientBrush x:Key="GlassBrushDark" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="#E61E293B" Offset="0.0" />
 <GradientStop Color="#CC334155" Offset="1.0" />
 </LinearGradientBrush>

 <LinearGradientBrush x:Key="GlassStrokeLight" StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="#80E2E8F0" Offset="0" />
 <GradientStop Color="#40E2E8F0" Offset="1" />
 </LinearGradientBrush>

 <LinearGradientBrush x:Key="GlassStrokeDark" StartPoint="0,0" EndPoint="0,1">
 <GradientStop Color="#80475569" Offset="0" />
 <GradientStop Color="#40334155" Offset="1" />
 </LinearGradientBrush>

 <!-- Gradient Backgrounds -->
 <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
 <GradientStop Color="{StaticResource Secondary}" Offset="1.0" />
 </LinearGradientBrush>

 <LinearGradientBrush x:Key="AccentGradient" StartPoint="0,0" EndPoint="1,1">
 <GradientStop Color="{StaticResource Secondary}" Offset="0.0" />
 <GradientStop Color="{StaticResource Tertiary}" Offset="1.0" />
 </LinearGradientBrush>

 <!-- ========================================
 MODERN SHADOWS
 ======================================== -->
 
 <Shadow x:Key="ShadowSm">
 <Shadow.Brush>
 <SolidColorBrush Color="#20000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,1</Shadow.Offset>
 <Shadow.Radius>2</Shadow.Radius>
 <Shadow.Opacity>0.05</Shadow.Opacity>
 </Shadow>

 <Shadow x:Key="ShadowMd">
 <Shadow.Brush>
<SolidColorBrush Color="#20000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,4</Shadow.Offset>
 <Shadow.Radius>6</Shadow.Radius>
 <Shadow.Opacity>0.08</Shadow.Opacity>
 </Shadow>

 <Shadow x:Key="ShadowLg">
 <Shadow.Brush>
 <SolidColorBrush Color="#20000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,10</Shadow.Offset>
 <Shadow.Radius>15</Shadow.Radius>
 <Shadow.Opacity>0.10</Shadow.Opacity>
 </Shadow>

 <Shadow x:Key="ShadowXl">
 <Shadow.Brush>
 <SolidColorBrush Color="#25000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,20</Shadow.Offset>
 <Shadow.Radius>25</Shadow.Radius>
 <Shadow.Opacity>0.15</Shadow.Opacity>
 </Shadow>

 <!-- Legacy shadow aliases -->
 <Shadow x:Key="GlassShadow">
 <Shadow.Brush>
 <SolidColorBrush Color="#20000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,4</Shadow.Offset>
 <Shadow.Radius>12</Shadow.Radius>
 <Shadow.Opacity>0.08</Shadow.Opacity>
 </Shadow>

 <Shadow x:Key="CardShadow">
 <Shadow.Brush>
 <SolidColorBrush Color="#20000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,2</Shadow.Offset>
 <Shadow.Radius>8</Shadow.Radius>
 <Shadow.Opacity>0.06</Shadow.Opacity>
 </Shadow>

 <Shadow x:Key="ElevatedShadow">
 <Shadow.Brush>
 <SolidColorBrush Color="#25000000" />
 </Shadow.Brush>
 <Shadow.Offset>0,8</Shadow.Offset>
 <Shadow.Radius>20</Shadow.Radius>
 <Shadow.Opacity>0.12</Shadow.Opacity>
 </Shadow>

 <!-- ========================================
 ICON FONTS
 ======================================== -->
 
 <FontImageSource x:Key="IconScoutMatch" FontFamily="FA" Glyph="&#xF15C;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
 <FontImageSource x:Key="IconTeams" FontFamily="FA" Glyph="&#xF0C0;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
 <FontImageSource x:Key="IconEvents" FontFamily="FA" Glyph="&#xF073;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
 <FontImageSource x:Key="IconGraphs" FontFamily="FA" Glyph="&#xF080;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
 <FontImageSource x:Key="IconPredictions" FontFamily="FA" Glyph="&#xF544;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
 <FontImageSource x:Key="IconLogout" FontFamily="FA" Glyph="&#xF2F5;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />

 <!-- ========================================
 BASE STYLES (ContentPage uses simple gradient background)
 ======================================== -->
 
 <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
 <!-- Fallback solid background color -->
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" />
 <!-- Use the simple gradient brush per theme -->
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PageBackgroundBrushLight}, Dark={StaticResource PageBackgroundBrushDark}}" />
 </Style>

 <Style TargetType="NavigationPage">
 <Setter Property="BarBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
 <Setter Property="BarTextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 </Style>

 <!-- Shell base style -->
 <Style TargetType="Shell">
 <Setter Property="FlyoutBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
 <Setter Property="Shell.TabBarBackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurface}, Dark={StaticResource DarkSurface}}" />
 <Setter Property="Shell.TabBarForegroundColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 </Style>

 <!-- ========================================
 MODERN CARD STYLES
 ======================================== -->
 
 <!-- Base Modern Card -->
 <Style x:Key="ModernCard" TargetType="Border">
 <!-- Cards are translucent glass with stronger translucency -->
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassOverlayLight}, Dark={StaticResource GlassOverlayDark}}" />
 <Setter Property="StrokeThickness" Value="1" />
 <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource LightBorder}, Dark={StaticResource DarkBorder}}" />
 <Setter Property="Padding" Value="20" />
 <Setter Property="Shadow" Value="{StaticResource ShadowSm}" />
 <Setter Property="StrokeShape">
 <RoundRectangle CornerRadius="{StaticResource CornerRadiusMedium}" />
 </Setter>
 </Style>

 <!-- Glass Card Styles -->
 <Style x:Key="GlassCard" TargetType="Border">
 <!-- GlassCard uses same translucent brush but slightly more blur feel via stroke & shadow -->
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource GlassOverlayLight}, Dark={StaticResource GlassOverlayDark}}" />
 <Setter Property="StrokeThickness" Value="1" />
 <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource LightBorder}, Dark={StaticResource DarkBorder}}" />
 <Setter Property="Padding" Value="20" />
 <Setter Property="Shadow" Value="{StaticResource ShadowMd}" />
 <Setter Property="StrokeShape">
 <RoundRectangle CornerRadius="{StaticResource CornerRadiusMedium}" />
 </Setter>
 </Style>

 <Style x:Key="ElevatedGlassCard" TargetType="Border" BasedOn="{StaticResource GlassCard}">
 <Setter Property="Shadow" Value="{StaticResource ShadowLg}" />
 <Setter Property="Padding" Value="24" />
 <Setter Property="StrokeShape">
 <RoundRectangle CornerRadius="{StaticResource CornerRadiusLarge}" />
 </Setter>
 </Style>

 <Style x:Key="CompactGlassCard" TargetType="Border" BasedOn="{StaticResource GlassCard}">
 <Setter Property="Padding" Value="16" />
 <Setter Property="StrokeShape">
 <RoundRectangle CornerRadius="{StaticResource CornerRadiusMedium}" />
 </Setter>
 </Style>

 <!-- Backward Compatibility Aliases -->
 <Style x:Key="CardBorderStyle" TargetType="Border" BasedOn="{StaticResource ModernCard}" />
 <Style x:Key="GlassCardStyle" TargetType="Border" BasedOn="{StaticResource GlassCard}" />

 <!-- List Item Card -->
 <Style x:Key="GlassListItem" TargetType="Border" BasedOn="{StaticResource ModernCard}">
 <Setter Property="Padding" Value="16" />
 <Setter Property="Margin" Value="0,0,0,12" />
 <Setter Property="StrokeShape">
 <RoundRectangle CornerRadius="{StaticResource CornerRadiusMedium}" />
 </Setter>
 </Style>

 <!-- ========================================
 MODERN BUTTON STYLES
 ======================================== -->
 
 <!-- Primary Button (flatter, subtle) -->
 <Style x:Key="PrimaryButton" TargetType="Button">
 <!-- Subtle tinted background -->
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PrimaryGlassButtonBrushLight}, Dark={StaticResource PrimaryGlassButtonBrushDark}}" />
 <Setter Property="TextColor" Value="White" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusSmall}" />
 <Setter Property="Padding" Value="14,8" />
 <Setter Property="HeightRequest" Value="48" />
 <!-- Minimal shadow for modern flat look -->
 <Setter Property="Shadow" Value="{StaticResource ShadowSm}" />
 <Setter Property="VisualStateManager.VisualStateGroups">
 <VisualStateGroupList>
 <VisualStateGroup x:Name="CommonStates">
 <VisualState x:Name="Normal" />
 <VisualState x:Name="Disabled">
 <VisualState.Setters>
 <Setter Property="Opacity" Value="0.6" />
 </VisualState.Setters>
 </VisualState>
 <VisualState x:Name="PointerOver">
 <VisualState.Setters>
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimaryDark}, Dark={StaticResource DarkPrimaryDark}}" />
 <Setter Property="Scale" Value="1.01" />
 </VisualState.Setters>
 </VisualState>
 </VisualStateGroup>
 </VisualStateGroupList>
 </Setter>
 </Style>

 <!-- Default Button style (applies app-wide unless overridden) -->
 <Style TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />

 <!-- Secondary Button -->
 <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSecondary}, Dark={StaticResource DarkSecondary}}" />
 <Setter Property="Padding" Value="12,8" />
 <Setter Property="FontSize" Value="14" />
 <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusSmall}" />
 <Setter Property="HeightRequest" Value="44" />
 </Style>

 <!-- Outline Button -->
 <Style x:Key="OutlineButton" TargetType="Button">
 <Setter Property="BackgroundColor" Value="Transparent" />
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <Setter Property="BorderWidth" Value="2" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusSmall}" />
 <Setter Property="Padding" Value="24,14" />
 <Setter Property="HeightRequest" Value="50" />
 </Style>

 <!-- Ghost Button -->
 <Style x:Key="GhostButton" TargetType="Button">
 <Setter Property="BackgroundColor" Value="Transparent" />
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusSmall}" />
 <Setter Property="Padding" Value="20,12" />
 </Style>

 <!-- Icon Button -->
 <Style x:Key="IconButton" TargetType="Button">
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightSurfaceVariant}, Dark={StaticResource DarkSurfaceVariant}}" />
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="CornerRadius" Value="12" />
 <Setter Property="WidthRequest" Value="48" />
 <Setter Property="HeightRequest" Value="48" />
 <Setter Property="Padding" Value="0" />
 <Setter Property="FontSize" Value="20" />
 </Style>

 <!-- FAB (Floating Action Button) -->
 <Style x:Key="FAB" TargetType="Button">
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <!-- Select the light/dark primary glass brush directly via AppThemeBinding -->
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource PrimaryGlassButtonBrushLight}, Dark={StaticResource PrimaryGlassButtonBrushDark}}" />
 <Setter Property="TextColor" Value="White" />
 <Setter Property="CornerRadius" Value="28" />
 <Setter Property="WidthRequest" Value="56" />
 <Setter Property="HeightRequest" Value="56" />
 <Setter Property="Padding" Value="0" />
 <Setter Property="FontSize" Value="24" />
 <Setter Property="Shadow" Value="{StaticResource ShadowLg}" />
 </Style>

 <!-- Legacy Glass Button Aliases -->
 <Style x:Key="GlassButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
 <Style x:Key="PrimaryGlassButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
 <Style x:Key="SecondaryGlassButton" TargetType="Button" BasedOn="{StaticResource SecondaryButton}" />
 <Style x:Key="OutlineGlassButton" TargetType="Button" BasedOn="{StaticResource OutlineButton}" />
 <Style x:Key="CounterButton" TargetType="Button" BasedOn="{StaticResource IconButton}" />

 <!-- Backward-compatible aliases for older XAML keys -->
 <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource SecondaryButton}" />
 <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButton}" />
 <Style x:Key="OutlineButtonStyle" TargetType="Button" BasedOn="{StaticResource OutlineButton}" />

 <!-- ========================================
 MODERN INPUT STYLES
 ======================================== -->
 
 <!-- Entry -->
 <Style x:Key="ModernEntry" TargetType="Entry">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="HeightRequest" Value="50" />
 <Setter Property="MinimumHeightRequest" Value="50" />
 <Setter Property="VerticalOptions" Value="Center" />
 <Setter Property="HorizontalTextAlignment" Value="Start" />
 <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
 </Style>

 <Style x:Key="GlassEntry" TargetType="Entry" BasedOn="{StaticResource ModernEntry}" />

 <!-- Editor -->
 <Style x:Key="ModernEditor" TargetType="Editor">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="MinimumHeightRequest" Value="100" />
 <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
 </Style>

 <Style x:Key="GlassEditor" TargetType="Editor" BasedOn="{StaticResource ModernEditor}" />

 <!-- Picker -->
 <Style x:Key="ModernPicker" TargetType="Picker">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="TitleColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 <!-- Platform-specific font size for best readability (WinUI larger) -->
 <Setter Property="FontSize">
 <Setter.Value>
 <OnPlatform x:TypeArguments="x:Double">
 <On Platform="WinUI" Value="24" />
 <On Platform="Android" Value="20" />
 <On Platform="iOS" Value="20" />
 <On Platform="MacCatalyst" Value="20" />
 </OnPlatform>
 </Setter.Value>
 </Setter>
 <!-- Platform-specific height so native dropdowns have ample room -->
 <Setter Property="HeightRequest">
 <Setter.Value>
 <OnPlatform x:TypeArguments="x:Double">
 <On Platform="WinUI" Value="80" />
 <On Platform="Android" Value="64" />
 <On Platform="iOS" Value="64" />
 <On Platform="MacCatalyst" Value="64" />
 </OnPlatform>
 </Setter.Value>
 </Setter>
 <Setter Property="MinimumHeightRequest">
 <Setter.Value>
 <OnPlatform x:TypeArguments="x:Double">
 <On Platform="WinUI" Value="80" />
 <On Platform="Android" Value="64" />
 <On Platform="iOS" Value="64" />
 <On Platform="MacCatalyst" Value="64" />
 </OnPlatform>
 </Setter.Value>
 </Setter>
 <Setter Property="VerticalOptions" Value="Center" />
 <!-- Use consistent font family for clarity -->
 <Setter Property="FontFamily" Value="OpenSansRegular" />
 <!-- Add platform-specific margin so dropdown text isn't clipped on native controls -->
 <Setter Property="Margin">
 <Setter.Value>
 <OnPlatform x:TypeArguments="Thickness">
 <On Platform="WinUI" Value="16,12" />
 <On Platform="Android" Value="12,10" />
 <On Platform="iOS" Value="12,10" />
 <On Platform="MacCatalyst" Value="12,10" />
 </OnPlatform>
 </Setter.Value>
 </Setter>
 </Style>
 
 <!-- Apply ModernPicker app-wide so any Picker without an explicit style gets the larger font/size -->
 <Style TargetType="Picker" BasedOn="{StaticResource ModernPicker}" />
 
 <Style x:Key="GlassPicker" TargetType="Picker" BasedOn="{StaticResource ModernPicker}" />
 <Style x:Key="GlassPickerStyle" TargetType="Picker" BasedOn="{StaticResource ModernPicker}" />

 <!-- ========================================
 MODERN LABEL STYLES
 ======================================== -->
 
 <Style x:Key="DisplayLabel" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="36" />
 <Setter Property="FontAttributes" Value="Bold" />
 <Setter Property="LineBreakMode" Value="WordWrap" />
 </Style>

 <!-- Default Label style to modern body label -->
 <Style TargetType="Label">
 <Setter Property="FontFamily" Value="{StaticResource AppFont}" />
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="FontSize" Value="16" />
 </Style>

 <Style x:Key="HeaderLabel" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="28" />
 <Setter Property="FontAttributes" Value="Bold" />
 <Setter Property="LineBreakMode" Value="WordWrap" />
 </Style>

 <Style x:Key="SubheaderLabel" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="20" />
 <Setter Property="FontAttributes" Value="Bold" />
 <Setter Property="LineBreakMode" Value="WordWrap" />
 </Style>

 <Style x:Key="BodyLabel" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextSecondary}, Dark={StaticResource DarkTextSecondary}}" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="LineBreakMode" Value="WordWrap" />
 </Style>

 <Style x:Key="CaptionLabel" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightTextTertiary}, Dark={StaticResource DarkTextTertiary}}" />
 <Setter Property="FontSize" Value="14" />
 <Setter Property="LineBreakMode" Value="WordWrap" />
 </Style>

 <Style x:Key="AccentLabel" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="16" />
 <Setter Property="FontAttributes" Value="Bold" />
 </Style>

 <Style x:Key="SectionHeader" TargetType="Label">
 <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <Setter Property="FontFamily" Value="OpenSansSemibold" />
 <Setter Property="FontSize" Value="20" />
 <Setter Property="FontAttributes" Value="Bold" />
 <Setter Property="Margin" Value="0,16,0,12" />
 </Style>

 <!-- ========================================
 MODERN UI ELEMENTS
 ======================================== -->
 
 <!-- Divider -->
 <Style x:Key="Divider" TargetType="BoxView">
 <Setter Property="HeightRequest" Value="1" />
 <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightDivider}, Dark={StaticResource DarkDivider}}" />
 <Setter Property="Margin" Value="0,12" />
 </Style>

 <!-- Badge -->
 <Style x:Key="Badge" TargetType="Border">
 <!-- Badges are translucent too -->
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 <Setter Property="Padding" Value="10,5" />
 <Setter Property="StrokeThickness" Value="0" />
 <Setter Property="StrokeShape">
 <RoundRectangle CornerRadius="12" />
 </Setter>
 </Style>

 <Style x:Key="SuccessBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 </Style>

 <Style x:Key="WarningBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 </Style>

 <Style x:Key="ErrorBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 </Style>

 <Style x:Key="InfoBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
 <Setter Property="Background" Value="{AppThemeBinding Light={StaticResource LiquidGlassBrushLight}, Dark={StaticResource LiquidGlassBrushDark}}" />
 </Style>

 <!-- ========================================
 FORM CONTROLS
 ======================================== -->
 
 <Style TargetType="CheckBox">
 <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" />
 <Setter Property="VisualStateManager.VisualStateGroups">
 <VisualStateGroupList>
 <VisualStateGroup x:Name="CommonStates">
 <VisualState x:Name="Normal" />
 <VisualState x:Name="Disabled">
 <VisualState.Setters>
 <Setter Property="Opacity" Value="0.5" />
