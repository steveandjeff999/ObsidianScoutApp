<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Font Awesome Free (Solid) icon glyphs. Add the 'fa-solid-900.ttf' (or 'fa-solid-900.ttf' renamed to 'fa-solid-900.ttf')
        into Resources/Fonts and ensure MauiProgram registers it as alias 'FA'.
    -->

    <FontImageSource x:Key="IconScoutMatch" FontFamily="FA" Glyph="&#xF15C;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="28" />
    <FontImageSource x:Key="IconTeams" FontFamily="FA" Glyph="&#xF0C0;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="28" />
    <FontImageSource x:Key="IconEvents" FontFamily="FA" Glyph="&#xF073;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="28" />
    <FontImageSource x:Key="IconGraphs" FontFamily="FA" Glyph="&#xF080;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="28" />
    <FontImageSource x:Key="IconPredictions" FontFamily="FA" Glyph="&#xF544;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="28" />
    <FontImageSource x:Key="IconLogout" FontFamily="FA" Glyph="&#xF2F5;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="28" />

    <!-- Toolbar / utility icons -->
    <FontImageSource x:Key="IconSearch" FontFamily="FA" Glyph="&#xF002;" Color="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" Size="24" />
    <FontImageSource x:Key="IconAdd" FontFamily="FA" Glyph="&#xF067;" Color="{AppThemeBinding Light={StaticResource LightPrimary}, Dark={StaticResource DarkPrimary}}" Size="24" />
    <FontImageSource x:Key="IconSettings" FontFamily="FA" Glyph="&#xF013;" Color="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" Size="24" />
    <FontImageSource x:Key="IconMenu" FontFamily="FA" Glyph="&#xF0C9;" Color="{AppThemeBinding Light={StaticResource LightTextPrimary}, Dark={StaticResource DarkTextPrimary}}" Size="26" />

</ResourceDictionary>