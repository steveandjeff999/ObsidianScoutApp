<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="ObsidianScout.Views.ScoutingLandingPage"
 Title="Scouting">

 <ScrollView>
 <VerticalStackLayout Padding="20" Spacing="20">

 <!-- Hero Card -->
 <Border Style="{StaticResource ElevatedGlassCard}">
 <VerticalStackLayout Spacing="12" Padding="16">
 <VerticalStackLayout Spacing="2">
 <Label Text="Scouting" Style="{StaticResource DisplayLabel}" />
 <Label Text="Quickly record match data with an adaptive scouting form." Style="{StaticResource BodyLabel}" />
 </VerticalStackLayout>

 <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
 <Button x:Name="OpenFormButton" Style="{StaticResource PrimaryButton}" Text="Open Scouting Form" AutomationProperties.Name="Open Scouting Form" />
 <Button Text="Teams" Style="{StaticResource OutlineButton}" Command="{Binding NavigateToTeamsCommand}" AutomationProperties.Name="Open Teams" />
 </HorizontalStackLayout>
 </VerticalStackLayout>
 </Border>

 <!-- Quick Actions -->
 <Label Text="Quick Actions" Style="{StaticResource SectionHeader}" />

 <!-- Responsive flex layout (wraps to single column on narrow screens) -->
 <FlexLayout Wrap="Wrap" JustifyContent="SpaceBetween" AlignItems="Start">

 <!-- Card: Start Match Scouting -->
 <Border Style="{StaticResource GlassCard}" Padding="12" Margin="0,0,12,12" MinimumHeightRequest="96"
 FlexLayout.Basis="48%" AutomationProperties.Name="Start Match Scouting">
 <VerticalStackLayout Spacing="8" Padding="0" HorizontalOptions="FillAndExpand">
 <Label Text="Start Match Scouting" Style="{StaticResource SubheaderLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 <Label Text="Launch the live scouting UI for an active match." Style="{StaticResource CaptionLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 </VerticalStackLayout>
 </Border>

 <!-- Card: Browse Teams -->
 <Border Style="{StaticResource GlassCard}" Padding="12" Margin="0,0,12,12" MinimumHeightRequest="96"
 FlexLayout.Basis="48%" AutomationProperties.Name="Browse Teams">
 <VerticalStackLayout Spacing="8" Padding="0" HorizontalOptions="FillAndExpand">
 <Label Text="Browse Teams" Style="{StaticResource SubheaderLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 <Label Text="Open the teams roster to view team details and history." Style="{StaticResource CaptionLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 </VerticalStackLayout>
 </Border>

 <!-- Card: Events -->
 <Border Style="{StaticResource GlassCard}" Padding="12" Margin="0,0,12,12" MinimumHeightRequest="96"
 FlexLayout.Basis="48%" AutomationProperties.Name="Events">
 <VerticalStackLayout Spacing="8" Padding="0" HorizontalOptions="FillAndExpand">
 <Label Text="Events" Style="{StaticResource SubheaderLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 <Label Text="See upcoming events and match schedules." Style="{StaticResource CaptionLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 </VerticalStackLayout>
 </Border>

 <!-- Card: Export Data -->
 <Border Style="{StaticResource GlassCard}" Padding="12" Margin="0,0,12,12" MinimumHeightRequest="96"
 FlexLayout.Basis="48%" AutomationProperties.Name="Export Data">
 <VerticalStackLayout Spacing="8" Padding="0" HorizontalOptions="FillAndExpand">
 <Label Text="Export Data" Style="{StaticResource SubheaderLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 <Label Text="Export scouting data to JSON or share via QR code." Style="{StaticResource CaptionLabel}" LineBreakMode="WordWrap" MaxLines="2" />
 </VerticalStackLayout>
 </Border>

 </FlexLayout>

 <BoxView HeightRequest="24" BackgroundColor="Transparent" />

 </VerticalStackLayout>
 </ScrollView>

</ContentPage>