<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Large rounded corners for cards -->
    <corners android:radius="16dp" />
    
    <!-- Dark surface -->
    <solid android:color="#2D2D30" />
    
    <!-- Subtle border -->
    <stroke
     android:width="1dp"
   android:color="#3F3F46" />
    
    <!-- Card padding -->
    <padding
   android:left="20dp"
        android:top="20dp"
android:right="20dp"
   android:bottom="20dp" />
</shape>
